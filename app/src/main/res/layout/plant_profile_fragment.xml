<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_up">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_marginHorizontal="18dp"
                android:background="#008489F0"/>

            <TextView
                android:id="@+id/up_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Растение"
                android:textSize="39sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/empty"
                android:layout_marginHorizontal="18dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/profile_plant_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/circle"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:src="@drawable/ic_plant"
            android:layout_margin="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cardBackground"
            android:layout_marginHorizontal="40dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">


                <EditText
                    android:id="@+id/plant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Название"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:background="#008489F0"
                    android:textSize="34sp"
                    android:layout_marginVertical="5dp"/>

                <EditText
                    android:id="@+id/plant_date"
                    android:hint="Дата посадки"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="date"
                    android:layout_marginVertical="10dp"
                    android:background="#008489F0"
                    android:textColor="@color/colorAccent"
                    android:textSize="21sp" />

                <EditText
                    android:id="@+id/plant_stay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="#008489F0"
                    android:gravity="center"
                    android:hint="До зрелости осталось дней"
                    android:inputType="number"
                    android:textColor="@color/colorAccent"
                    android:textSize="21sp" />
                <EditText
                    android:id="@+id/plant_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="10dp"
                    android:background="#008489F0"
                    android:hint="Дефекты"
                    android:textColor="@color/colorAccent"
                    android:textSize="21sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>

